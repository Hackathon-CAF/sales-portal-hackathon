generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(user)
  segment    Segment  @default(Bronze)
  totalSpent Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  orders       Order[]
  transactions Transaction[]
}

model Product {
  id           Int             @id @default(autoincrement())
  name         String
  category     String
  price        Float
  stock        Int             @default(0)
  orders       Order[]
  production   Production[]
  support      SupportTicket[]
  transactions Transaction[]
}

model Order {
  id           Int      @id @default(autoincrement())
  userId       Int
  productId    Int
  quantity     Int
  totalPrice   Float
  status       Status   @default(pending)
  statusDetail String?
  city         String?
  state        String?
  createdAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Transaction {
  id              Int      @id @default(autoincrement())
  orderId         Int
  userId          Int
  productId       Int
  orderDate       DateTime @default(now())
  status          Status
  statusDetail    String?
  city            String?
  state           String?
  clientName      String
  clientSegment   Segment
  productName     String
  productCategory String
  quantity        Int
  unitPrice       Float
  totalPrice      Float

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Production {
  id               Int     @id @default(autoincrement())
  productId        Int
  quantityPlanned  Int
  quantityProduced Int     @default(0)
  status           Status  @default(in_progress)
  product          Product @relation(fields: [productId], references: [id])
}

model SupportTicket {
  id          Int       @id @default(autoincrement())
  clientName  String
  productId   Int
  description String
  status      Status    @default(open)
  openedAt    DateTime  @default(now())
  closedAt    DateTime?
  product     Product   @relation(fields: [productId], references: [id])
}

enum Role {
  admin
  user
}

enum Segment {
  Gold
  Silver
  Bronze
}

enum Status {
  pending
  in_progress
  open
  closed
  completed
  cancelled
}
